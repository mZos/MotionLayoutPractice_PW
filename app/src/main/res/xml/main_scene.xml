<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">

        <OnClick
            motion:clickAction="transitionToEnd"
            motion:targetId="@+id/button" />

        <KeyFrameSet>
            <KeyAttribute
                android:translationY="150dp"
                motion:framePosition="0"
                motion:motionTarget="@+id/constraintLayout1" />
            <KeyAttribute
                android:translationY="0dp"
                motion:framePosition="100"
                motion:motionTarget="@+id/constraintLayout1" />
            <KeyAttribute
                android:translationY="150dp"
                motion:framePosition="0"
                motion:motionTarget="@+id/constraintLayout2" />
            <KeyAttribute
                android:translationY="0dp"
                motion:framePosition="100"
                motion:motionTarget="@+id/constraintLayout2" />
        </KeyFrameSet>
    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">

        <OnClick
            motion:clickAction="transitionToEnd"
            motion:targetId="@+id/constraintLayout1" />
        <KeyFrameSet>
            <KeyAttribute
                android:scaleX="1"
                motion:framePosition="0"
                motion:motionTarget="@+id/constraintLayout2" />
            <KeyAttribute
                android:scaleY="1"
                motion:framePosition="0"
                motion:motionTarget="@+id/constraintLayout2" />
            <KeyAttribute
                android:scaleX="0"
                motion:framePosition="100"
                motion:motionTarget="@+id/constraintLayout2" />
            <KeyAttribute
                android:scaleY="0"
                motion:framePosition="100"
                motion:motionTarget="@+id/constraintLayout2" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/constraintLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/guideline2" />
        <Constraint
            android:id="@+id/constraintLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="@+id/guideline2" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/constraintLayout1"
            motion:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" />
        <Constraint
            android:id="@+id/constraintLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            motion:layout_constraintStart_toStartOf="@+id/guideline2" />
    </ConstraintSet>
</MotionScene>